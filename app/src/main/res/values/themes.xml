<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with no action bar -->
    <style name="Theme.StrokeApps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Theme for activities that don't need action bar -->
    <style name="Theme.StrokeApps.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Theme for splash screen -->
    <style name="Theme.StrokeApps.Splash" parent="Theme.StrokeApps.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_gradient_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.StrokeApps.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.StrokeApps.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>