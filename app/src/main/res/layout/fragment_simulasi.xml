<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.simulasi.SimulasiFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simulasi Prediksi Stroke"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Input Gender -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laki-laki"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perempuan" />
        </RadioGroup>

        <!-- Input Age -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Umur"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan umur (0-100)"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Input Hypertension -->
        <CheckBox
            android:id="@+id/cbHypertension"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hipertensi"
            android:layout_marginBottom="16dp" />

        <!-- Input Heart Disease -->
        <CheckBox
            android:id="@+id/cbHeartDisease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Penyakit Jantung"
            android:layout_marginBottom="16dp" />

        <!-- Input Ever Married -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Pernikahan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgMarried"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbMarried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pernah Menikah"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/rbNotMarried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belum Menikah" />
        </RadioGroup>

        <!-- Input Work Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jenis Pekerjaan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spWorkType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Input Residence Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipe Tempat Tinggal"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/rgResidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbUrban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perkotaan"
                android:layout_marginEnd="16dp" />

            <RadioButton
                android:id="@+id/rbRural"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedesaan" />
        </RadioGroup>

        <!-- Input Average Glucose Level -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rata-rata Kadar Glukosa"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etGlucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan kadar glukosa (mg/dL)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Input BMI -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMI (Body Mass Index)"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etBmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan BMI"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <!-- Input Smoking Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status Merokok"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spSmokingStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Predict Button -->
        <Button
            android:id="@+id/btnPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediksi Stroke"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Result -->
        <LinearLayout
            android:id="@+id/llResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEC3A"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil Prediksi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvProbability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>